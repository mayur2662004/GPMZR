<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BonafiteCertificateForm"
    android:orientation="vertical"
    android:background="#EFE7E7">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_form_page"
        android:textColor="#D50F08"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_20ssp"
        android:layout_gravity="center"
        android:text="Goverment Polytechnic Murtizapur"
        android:fontFamily="sans-serif-black"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_linear_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/gpm_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_of_application_of_bonafite_form_page"
                android:textColor="#BF4A45"
                android:textStyle="bold"
                android:textSize="@dimen/_21ssp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:text="Application Form
                           Of Bonafite Certificate "
                android:fontFamily="sans-serif-black"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_name_of_stud"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_stud"
                    android:hint="First Name"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_name_of_middle"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_middle"
                    android:hint="Middle Name"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_name_of_last"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_last"
                    android:hint="Last Name"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_date"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_date"
                    android:hint="Date"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_Enrollment_num"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_enroll_num"
                    android:hint="Enrollment Number"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="number"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_Branch"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/ed"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal">
                    <RadioButton android:id="@+id/radio_co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <RadioButton android:id="@+id/radio_it"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IT"
                        android:layout_marginRight="@dimen/_10sdp"
                        />
                    <RadioButton android:id="@+id/radio_Mech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ME"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <RadioButton android:id="@+id/radio_ele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EE"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <RadioButton android:id="@+id/radio_civil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CE"
                        android:layout_marginRight="@dimen/_10sdp"/>
                </RadioGroup>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_year"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/_20sdp">
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal">

                    <RadioButton android:id="@+id/radio_1st_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1st Year"
                        android:layout_marginHorizontal="@dimen/_10sdp"/>
                    <RadioButton android:id="@+id/radio_2nd_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2nd Year"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <RadioButton android:id="@+id/radio_3rd_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3rd Year"
                        android:layout_marginRight="@dimen/_10sdp"/>
                </RadioGroup>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_sub"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_sub"
                    android:hint="Subject"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:id="@+id/cd_upload"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_upload_file"
                    android:hint="Add Payment Receipt"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="number"/>


            </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/_20sdp"
               android:layout_marginBottom="@dimen/_40sdp"
               android:gravity="end">
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/sub_btn"
                   android:text="Submit"
                   android:layout_marginRight="@dimen/_30sdp"
                   android:textSize="@dimen/_20ssp"
                   android:padding="@dimen/_5sdp"
                   />
           </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
