<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BonafiteCertificateForm"
    android:orientation="vertical"
    android:background="#EFE7E7">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_form_page"
        android:textColor="#D50F08"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center"
        android:text="Goverment Polytechnic Murtizapur"
        android:fontFamily="sans-serif-black"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_linear_layout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gpm_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_of_application_of_bonafite_form_page"
                android:textColor="#BF4A45"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_marginHorizontal="15dp"
                android:text="Application Form
                           Of Bonafite Certificate "
                android:fontFamily="sans-serif-black"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_name_of_stud"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_stud"
                    android:hint="First Name"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_name_of_middle"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_middle"
                    android:hint="Middle Name"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_name_of_last"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_name_of_last"
                    android:hint="Last Name"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_date"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tv_date"
                    android:text="Date"
                    android:hint="Date"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_Enrollment_num"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_enroll_num"
                    android:hint="Enrollment Number"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:maxLength="10"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="number"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_Branch"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp">
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ed"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal">
                    <RadioButton android:id="@+id/radio_co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:layout_marginRight="10dp"/>
                    <RadioButton android:id="@+id/radio_it"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IT"
                        android:layout_marginRight="10dp"
                        />
                    <RadioButton android:id="@+id/radio_Mech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ME"
                        android:layout_marginRight="10dp"/>
                    <RadioButton android:id="@+id/radio_ele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EE"
                        android:layout_marginRight="10dp"/>

                    <RadioButton android:id="@+id/radio_civil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CE"
                        android:layout_marginRight="10dp"/>
                </RadioGroup>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_year"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/year"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal">
                    <RadioButton android:id="@+id/radio_1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1st year"
                        android:layout_marginRight="15dp"/>
                    <RadioButton android:id="@+id/radio_2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2nd year"
                        android:layout_marginRight="15dp"
                        />
                    <RadioButton android:id="@+id/radio_3rd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3rd year"
                        android:layout_marginRight="15dp"/>





                </RadioGroup>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_sub"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_sub"
                    android:hint="Subject"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="text"/>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/cd_upload"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Et_upload_file"
                    android:hint="Add Payment Receipt"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="number"/>


            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="end">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Submit"
                    android:id="@+id/submit_button"
                    android:layout_marginRight="30dp"
                    android:textSize="20dp"
                    android:padding="5dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>