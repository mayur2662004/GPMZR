<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="350sp"
            android:layout_height="200dp"
            android:layout_margin="20sp"
            app:cardCornerRadius="20sp"
            android:layout_gravity="center"
            app:cardElevation="100sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select To Download Bonafite..."
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="20dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10dp">
                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/ed"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal">
                        <RadioButton android:id="@+id/radio_co"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CO"
                            android:layout_marginRight="10dp"/>
                        <RadioButton android:id="@+id/radio_it"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IT"
                            android:layout_marginRight="10dp"
                            />
                        <RadioButton android:id="@+id/radio_Mech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ME"
                            android:layout_marginRight="10dp"/>
                        <RadioButton android:id="@+id/radio_ele"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EE"
                            android:layout_marginRight="10dp"/>

                        <RadioButton android:id="@+id/radio_civil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CE"
                            android:layout_marginRight="10dp"/>
                    </RadioGroup>


                    <Spinner
                        android:id="@+id/sem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:entries="@array/Select"
                        android:layout_marginTop="10dp"
                        />



                </LinearLayout>

                <ImageView
                    android:id="@+id/download"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/baseline_download_for_offline_24"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>